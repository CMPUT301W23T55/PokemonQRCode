<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/found_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Code found!"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/found_user_image"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <Button
        android:id="@+id/found_open_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save picture of location?" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/save_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:text="Record geolocation?">

        </TextView>
        <Spinner
            android:id="@+id/edit_text_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:inputType="text"
            android:hint="Save location?"
            android:paddingBottom="10dp"/>
    </LinearLayout>
</LinearLayout>