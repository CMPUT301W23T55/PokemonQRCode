<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <TextView
            android:id="@+id/user_name"
            android:layout_width="1100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Name"
            android:textColor="#000"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/Labelpicture2"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="7dp"
            android:text="Total Score:"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/picture2"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_alignEnd="@+id/Labelpicture2"
            android:text="TS"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Labelpicture3"
            android:layout_width="217dp"
            android:layout_height="30dp"
            android:layout_below="@+id/Labelpicture2"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="7dp"
            android:text="Total Codes:"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/picture3"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Labelpicture2"
            android:layout_alignEnd="@+id/Labelpicture3"
            android:text="TC"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>